<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/title_bg"
    android:layout_height="match_parent">


    <RadioGroup
        android:id="@+id/pub_radiogroup"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/pub_title_left"
            android:gravity="center"
            android:textColor="@drawable/tab_title_color"
            android:background="@drawable/ic_topic_leftbtn_selector"
            android:text="@string/tuijian"
            android:button="@null"
            android:layout_width="60dp"
            android:layout_height="30dp" />


        <RadioButton
            android:checked="true"
            android:textColor="@drawable/tab_title_color"
            android:id="@+id/pub_title_right"
            android:gravity="center"
            android:background="@drawable/ic_topic_rightbtn_selector"
            android:button="@null"
            android:text="@string/fenlei"
            android:layout_width="60dp"
            android:layout_height="30dp" />

    </RadioGroup>


    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_topic_search_selector"/>


</RelativeLayout>